---
const path = Astro.url.pathname;
---

<nav class="large-menu-nav">
  <ul class="large-menu">
    <li><a href="/" class={path === "/" ? "active" : ""}>home</a></li>
    <li>
      <a href="/team" class={path === "/team/" ? "active" : ""}>team</a>
    </li>
    <li>
      <a href="/blog" class={path === "/blog/" ? "active" : ""}>blog</a>
    </li>
    <li>
      <a href="/contact" class={path === "/contact/" ? "active" : ""}>contact</a
      >
    </li>
  </ul>
</nav>

<style>
  .large-menu-nav {
    position: relative;
  }

  .large-menu {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  a {
    text-transform: uppercase;
    font-weight: bold;
    color: #4f5052;
    padding: 4px 16px;
    border-radius: 10px;
  }

  a.active {
    color: var(--light-color);
    background-color: #4f5052;
  }

  @media screen and (min-width: 768px) {
    .large-menu-nav {
      position: relative;
    }

    .large-menu {
      display: flex;
      flex-direction: row;
      gap: 24px;
      list-style: none;
      padding: 0;
      margin: 0;
    }
  }
</style>
