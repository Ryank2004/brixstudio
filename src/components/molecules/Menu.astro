---
const path = Astro.url.pathname;

// Helper functie om te controleren of een pad actief is
const isActive = (basePath: string): boolean => {
  // Exact match voor de homepage
  if (basePath === "/" && path === "/") {
    return true;
  }

  // Speciale case voor succespagina: deze markeren we als actief voor contact
  if (basePath === "/contact" && path === "/succes") {
    return true;
  }
  // Voor andere pagina's, check of het path begint met basePath
  return basePath !== "/" && path.startsWith(basePath);
};
---

<nav class="large-menu-nav">
  <ul class="large-menu">
    <li>
      <a href="/" class={isActive("/") ? "active" : ""} tabindex="0">home</a>
    </li>
    <li>
      <a
        href="/projecten"
        class={isActive("/projecten") ? "active" : ""}
        tabindex="0">Projecten</a
      >
    </li>
    <li>
      <a
        href="/ai-agents"
        class={isActive("/ai-agents") ? "active" : ""}
        tabindex="0">AI agents</a
      >
    </li>
    <li>
      <a href="/blog" class={isActive("/blog") ? "active" : ""} tabindex="0"
        >blog</a
      >
    </li>
    <li>
      <a
        href="/contact"
        class={isActive("/contact") ? "active" : ""}
        tabindex="0">contact</a
      >
    </li>
  </ul>
</nav>

<style>
  .large-menu-nav {
    position: relative;
  }

  .large-menu {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
    align-items: center;
  }

  a {
    text-transform: uppercase;
    font-weight: bold;
    color: #4f5052;
    padding: 5px 16px 4px 16px;
    border-radius: 10px;
  }

  a.active {
    color: var(--light-color);
    background-color: var(--tertiary-color);
  }

  a:hover {
    color: var(--light-color);
    background-color: #727274;
  }

  a.active:hover {
    color: var(--light-color);
    background-color: var(--tertiary-color);
  }

  @media screen and (min-width: 928px) {
    .large-menu-nav {
      position: relative;
    }

    .large-menu {
      display: flex;
      flex-direction: row;
      gap: 24px;
      list-style: none;
      padding: 0;
      margin: 0;
    }
  }
</style>
