---
const path = Astro.url.pathname;

// Helper functie om te controleren of een pad actief is
const isActive = (basePath: string): boolean => {
  // Exact match voor de homepage
  if (basePath === "/" && path === "/") {
    return true;
  }
  // Voor andere pagina's, check of het path begint met basePath
  return basePath !== "/" && path.startsWith(basePath);
};
---

<nav class="large-menu-nav">
  <ul class="large-menu">
    <li><a href="/" class={isActive("/") ? "active" : ""}>home</a></li>
    <li>
      <a href="/projecten" class={isActive("/projecten") ? "active" : ""}>projecten</a>
    </li>
    <li>
      <a href="/blog" class={isActive("/blog") ? "active" : ""}>blog</a>
    </li>
    <li>
      <a href="/contact" class={isActive("/contact") ? "active" : ""}>contact</a>
    </li>
  </ul>
</nav>

<style>
  .large-menu-nav {
    position: relative;
  }

  .large-menu {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
    /* display: flex; */
    align-items: center;
  }

  a {
    text-transform: uppercase;
    font-weight: bold;
    color: #4f5052;
    padding: 5px 16px 4px 16px;
    border-radius: 10px;
  }

  a.active {
    color: var(--light-color);
    background-color: #4f5052;
  }

  @media screen and (min-width: 928px) {
    .large-menu-nav {
      position: relative;
    }

    .large-menu {
      display: flex;
      flex-direction: row;
      gap: 24px;
      list-style: none;
      padding: 0;
      margin: 0;
    }
  }
</style>
