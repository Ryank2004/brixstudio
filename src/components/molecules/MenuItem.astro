---
export interface Props {
  href: string;
  label: string;
  isActive?: boolean;
}

const { href, label, isActive } = Astro.props;
---

<li>
  <a 
    href={href} 
    class={isActive ? "active" : ""}
    aria-current={isActive ? "page" : undefined}
    >
    {label}
  </a>
</li>

<style>
  a {
    text-transform: uppercase;
    font-weight: bold;
    color: #4F5052;
    padding: 4px 16px;
    border-radius: 10px;
  }

  a.active {
    color: var(--light-color);
    background-color: #4F5052;
  }
</style>