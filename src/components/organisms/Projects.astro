---
import Project from "@molecules/Project.astro";
---

<div class="projects" id="projects">
    <ol>
        <li><Project /></li>
        <li><Project /></li>
        <li><Project /></li>
        <li><Project /></li>
    </ol>
</div>

<style>
    .projects {
        padding: 80px 25px 25px;
    }

    ol {
        list-style: none;
        display: grid;
        grid-template-columns: 1fr;
        gap: 90px;
        padding: 0;
        margin: 0;
    }

    @media screen and (min-width: 764px) {
        ol {
            display: grid;
            gap: 96px;
            grid-template-columns: repeat(2, 1fr);
            /* Definieer expliciete rijen met verschillende hoogtes */
            grid-template-rows: 200px 200px 200px 200px;
            grid-auto-flow: column;
        }

        /* Eerste en derde item in de eerste kolom */
        ol > li:nth-child(1) {
            grid-column: 1;
            grid-row: 1;
        }

        ol > li:nth-child(3) {
            grid-column: 1;
            grid-row: 3;
        }

        /* Tweede en vierde item in de tweede kolom, verschoven */
        ol > li:nth-child(2) {
            grid-column: 2;
            grid-row: 2 / span 2;
        }

        ol > li:nth-child(4) {
            grid-column: 2;
            grid-row: 4 / span 2;
        }
    }

    @media screen and (min-width: 813px) {
        .projects {
            padding: 120px 60px 25px;
        }
    }

    @media screen and (min-width: 1024px) {
        ol {
            gap: 176px;
        }
    }
</style>
