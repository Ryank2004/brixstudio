---
import MenuItem from "@molecules/MenuItem.astro";

const pages = [
  { name: "home", href: "/" },
  { name: "about", href: "/about" },
  { name: "blog", href: "/blog" },
  { name: "contact", href: "/contact" }
];

const currentPath = Astro.url.pathname;
---

<nav class="large-menu-nav">
  <ul class="large-menu">
    {pages.map((page) => (
      <MenuItem
        href={page.href}
        label={page.name}
        isActive={page.href === currentPath}
      />
    ))}
  </ul>
</nav>

<style>
  .large-menu-nav {
    position: relative;
  }

  .large-menu {
    display: flex;
    gap: 24px;
    list-style: none;
    padding: 0;
    margin: 0;
  }
</style>
