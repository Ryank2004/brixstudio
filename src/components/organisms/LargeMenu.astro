---
const normalizePath = (path: string) =>
  path.endsWith("/") && path !== "/" ? path.slice(0, -1) : path;

const path = normalizePath(Astro.url.pathname);
---

<nav class="large-menu-nav">
  <ul class="large-menu">
    <li><a href="/" class={path === "/" ? "active" : ""}>home</a></li>
    <li>
      <a href="/about" class={path === "/about" ? "active" : ""}>about</a>
    </li>
    <li>
      <a href="/blog" class={path === "/blog" ? "active" : ""}>blog</a>
    </li>
    <li>
      <a href="/contact" class={path === "/contact" ? "active" : ""}>contact</a>
    </li>
  </ul>
</nav>

<style>
  .large-menu-nav {
    position: relative;
  }

  .large-menu {
    display: flex;
    gap: 24px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  a {
    text-transform: uppercase;
    font-weight: bold;
    color: #4f5052;
    padding: 4px 16px;
    border-radius: 10px;
  }

  a.active {
    color: var(--light-color);
    background-color: #4f5052;
  }
</style>
