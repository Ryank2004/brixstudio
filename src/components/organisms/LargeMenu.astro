---
const currentPath = Astro.url.pathname;
---

<nav class="large-menu-nav">
  <ul class="large-menu">
    <li><a href="/" class={currentPath === "/" ? "active" : ""}>home</a></li>
    <li>
      <a
        href="/about"
        class={currentPath === "/about" ? "active" : ""}
        >about</a
      >
    </li>
    <li>
      <a href="/blog" class={currentPath === "/blog" ? "active" : ""}
        >blog</a
      >
    </li>
    <li>
      <a href="/contact" class={currentPath === "/contact" ? "active" : ""}>contact</a>
    </li>
  </ul>
</nav>

<style>
  .large-menu-nav {
    position: relative;
  }

  .large-menu {
    display: flex;
    gap: 24px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  a {
    text-transform: uppercase;
    font-weight: bold;
    color: #4F5052;
    padding: 4px 16px;
    border-radius: 10px;
  }

  a.active {
    color: var(--light-color);
    background-color: #4F5052;
  }
</style>
