---
import ContactButton from "@molecules/ContactButton.astro";
import Logo from "@atoms/Logo.astro";
import Menu from "@molecules/Menu.astro";
---

<nav class="site-nav">
    <a href="/" aria-label="Go to homepage" tabindex="0" class="logo-link">
        <Logo />
    </a>

    <div class="small-menu">
        <a
            href="/contact"
            class="contact-button"
            aria-label="Go to contact form"
            tabindex="0"
        >
            <ContactButton />
        </a>

        <input
            type="checkbox"
            id="mobile-menu-toggle"
            class="sr-only"
            tabindex="0"
            aria-controls="mobile-menu"
            aria-label="Toggle menu"
        />

        <label for="mobile-menu-toggle" class="menu-button">
            <span class="burger" aria-hidden="true">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </span>
        </label>
    </div>

    <div id="mobile-menu" class="mobile-menu" aria-label="Hoofdmenu">
        <Menu />
    </div>
</nav>

<style>
    .site-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 25px;
    }

    .logo-link:focus {
        outline-offset: 10px;
    }

    .sr-only {
        position: absolute;
        inline-size: 1px;
        block-size: 1px;
        margin: -1px;
        padding: 0;
        border: 0;
        clip: rect(0 0 0 0);
        clip-path: inset(50%);
        overflow: hidden;
        white-space: nowrap;
    }

    .small-menu {
        position: fixed;
        right: 25px;
        display: flex;
        align-items: center;
        gap: 24px;
        background-color: var(--medium-color);
        padding: 4.4px 16px;
        border-radius: 12px;
        z-index: 100;
    }

    .contact-button,
    .menu-button {
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        cursor: pointer;
    }
    .contact-button {
        inline-size: 20px;
        block-size: 20px;
    }
    
    .menu-button {
        inline-size: 32px;
        block-size: 32px;
        color: var(--icon-color);
    }

    .small-menu:has(#mobile-menu-toggle:focus-visible) .menu-button {
        outline: 2px solid #facc15;
        outline-offset: 3px;
        transition: outline-offset 0.2s ease;
    }

    .burger {
        position: relative;
        inline-size: 20px;
        block-size: 20px;
        display: block;
    }

    .burger .bar {
        position: absolute;
        left: 0;
        right: 0;
        height: 2px;
        background: var(--dark-color);
        border-radius: 1px;
        transform-origin: 50% 50%;
        transition:
            transform 0.2s ease,
            opacity 0.2s ease,
            top 0.2s ease;
    }

    .burger .bar:nth-child(1) {
        top: 2px;
    }
    .burger .bar:nth-child(2) {
        top: 9px;
    }
    .burger .bar:nth-child(3) {
        top: 16px;
    }

    .small-menu:has(#mobile-menu-toggle:checked) .burger .bar:nth-child(1) {
        top: 10px;
        transform: rotate(45deg);
    }
    .small-menu:has(#mobile-menu-toggle:checked) .burger .bar:nth-child(2) {
        opacity: 0;
    }
    .small-menu:has(#mobile-menu-toggle:checked) .burger .bar:nth-child(3) {
        top: 10px;
        transform: rotate(-45deg);
    }

    .mobile-menu {
        position: fixed;
        top: 70px;
        right: -225px;
        z-index: 1000;
        display: flex;
        flex-direction: column;
        align-items: center;
        background: var(--medium-color);
        padding: 33px 22px 22px;
        border-radius: 16px;
        visibility: hidden;
        pointer-events: none;
        transition:
            right 0.2s ease-out,
            visibility 0s linear 0.2s;
    }

    .small-menu:has(#mobile-menu-toggle:checked) + .mobile-menu {
        right: 25px;
        visibility: visible;
        pointer-events: auto;
        transition: right 0.2s ease-out;
    }

    @media (prefers-reduced-motion: reduce) {
        .mobile-menu {
            transition: none;
        }
        .burger .bar {
            transition: none;
        }
    }

    @media (min-width: 813px) {
        .site-nav {
            padding: 32.5px 60px;
        }
        .small-menu {
            right: 60px;
        }

        .mobile-menu {
            top: 60px;
            right: -260px;
            padding: 10px 12px;
            border-radius: 16px;
        }
    }

    @media (min-width: 928px) {
        .site-nav {
            padding: 32.5px 60px;
        }
        .small-menu {
            display: none;
        }
        .mobile-menu {
            display: block;
            top: 35px;
            right: 60px;
            padding: 11px 7px 10px;
            border-radius: 14px;
            visibility: visible;
            pointer-events: auto;
            transition: none;
        }
    }

    @media (min-width: 1624px) {
        .site-nav {
            padding: 40px 120px;
        }

        .mobile-menu {
            top: 42px;
            right: 120px;
        }
    }
</style>
