---
import MenuButton from "@molecules/MenuButton.astro";
import ContactButton from "@molecules/ContactButton.astro";
import CloseIcon from "@atoms/CloseIcon.astro";
import Logo from "@atoms/Logo.astro";
import Menu from "@molecules/Menu.astro";
---

<nav>
    <a href="/" aria-label="Go to homepage" tabindex="0">
        <Logo />
    </a>

    <div class="small-menu">
        <a
            href="/contact"
            class="contact-button"
            aria-label="Go to contact form"
            tabindex="0"
        >
            <ContactButton />
        </a>

        <input
            type="checkbox"
            id="mobile-menu-toggle"
            class="menu-toggle"
            tabindex="0"
        />

        <label
            for="mobile-menu-toggle"
            aria-label="Open the menu"
            class="menu-button"
        >
            <MenuButton />
        </label>
    </div>

    <div class="mobile-menu">
        <Menu />
        <label
            for="mobile-menu-toggle"
            aria-label="Close the menu"
            class="close-icon"
        >
            <CloseIcon />
        </label>
    </div>
</nav>

<style>
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 25px;
    }

    .menu-toggle {
        position: absolute;
        inline-size: 1px;
        block-size: 1px;
        margin: -1px;
        padding: 0;
        border: 0;
        clip: rect(0 0 0 0);
        clip-path: inset(50%);
        overflow: hidden;
        white-space: nowrap;
    }

    .small-menu {
        position: fixed;
        right: 25px;
        display: flex;
        align-items: center;
        background-color: var(--medium-color);
        padding: 4.4px 16px;
        gap: 24px;
        border-radius: 12px;
        z-index: 100;
    }

    .contact-button {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #e4e6e6;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        text-decoration: none;
        cursor: pointer;
    }

    .contact-button svg {
        width: 60%;
        height: 60%;
        pointer-events: none;
    }

    .menu-button {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #e4e6e6;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        cursor: pointer;
    }

    .menu-button svg {
        width: 60%;
        height: 60%;
        pointer-events: none;
    }

    .close-icon {
        display: flex;
        margin-top: 18px;
        margin-left: 4px;
        background-color: #e4e6e6;
        color: #4f5052;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        cursor: pointer;
    }

    .mobile-menu {
        /* display: none; */
        display: flex;
        flex-direction: column;
        align-items: center;
        position: fixed;
        top: 70px;
        right: -225px;
        background-color: var(--medium-color);
        padding: 33px 22px 22px;
        border-radius: 16px;
        z-index: 1000;
        transition: right 0.2s ease-out;
    }
    
    .small-menu:has(#mobile-menu-toggle:focus-visible) .menu-button {
        outline: 2px solid #facc15;
        outline-offset: 3px;
    }

    .small-menu:has(#mobile-menu-toggle:checked) + .mobile-menu {
        right: 25px;
        visibility: visible;
        pointer-events: auto;
        transition: right 0.2s ease-out;
    }

    @media screen and (min-width: 813px) {
        nav {
            padding: 32.5px 60px;
        }

         .small-menu:has(#mobile-menu-toggle:checked) + .mobile-menu  {
            right: 60px;
        }

        .mobile-menu {
            padding: 10px 12px;
            border-radius: 16px;
            top: 90px;
            right: -260px;
        }
    }

    @media screen and (min-width: 928px) {
        nav {
            padding: 32.5px 60px;
        }

        .small-menu {
            display: none;
        }

        .mobile-menu {
            display: block;
            padding: 11px 7px 10px;
            border-radius: 14px;
            top: 35px;
            right: 60px;
        }

        .close-icon {
            display: none;
        }
    }

    @media screen and (min-width: 1624px) {
        nav {
            padding: 40px 120px;
        }

        .mobile-menu {
            top: 42px;
            right: 120px;
        }
    }
</style>
