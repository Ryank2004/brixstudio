---
import MenuButton from "@molecules/MenuButton.astro";
import ContactButton from "@molecules/ContactButton.astro";
import Logo from "@atoms/Logo.astro";
import LargeMenu from "@molecules/LargeMenu.astro";
---

<nav>
    <Logo />
      <!-- Hidden checkbox toggle voor mobiele menu -->
  <input type="checkbox" id="mobile-menu-toggle" class="menu-toggle" />

  <!-- Label fungeert als trigger voor mobiele menu -->
  <label for="mobile-menu-toggle" class="small-menu">
    <ContactButton />
    <MenuButton />
  </label>
    <div class="large-menu">
        <LargeMenu />
    </div>
</nav>
<style>
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 25px;
    }

    .small-menu {
        position: fixed;
        right: 25px;
        display: flex;
        align-items: center;
        background-color: var(--medium-color);
        padding: 4.4px 16px;
        gap: 24px;
        border-radius: 12px;
        z-index: 100;
    }

    .large-menu {
        display: none;
        background-color: var(--medium-color);
        padding: 10px 12px;
        border-radius: 16px;
    }

    @media screen and (min-width: 768px) {
        .small-menu {
            display: none;
        }

        .large-menu {
            display: block;
        }
    }

    @media screen and (min-width: 1024px) {
    }
</style>
