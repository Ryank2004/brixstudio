---
import Layout from "@layout/Layout.astro";
// import BlogPosts from "@organisms/BlogPosts.astro";

const blogStructuredData = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Blog | Brix Studio",
  "description": "Blijf op de hoogte van de nieuwste trends in webontwikkeling, design en AI. Lees onze inzichtelijke blogs over digitale innovatie en creatieve oplossingen.",
  "url": "https://www.brixstudio.nl/blog",
  "publisher": {
    "@type": "Organization",
    "name": "Brix Studio",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.brixstudio.nl/images/BrixStudioIcon.svg" // Pas dit aan naar je logo URL
    }
  },
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://www.brixstudio.nl"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Blog",
        "item": "https://www.brixstudio.nl/blog"
      }
    ]
  }
};
---

<Layout title="Blog | Brix Studio" description="Blijf op de hoogte van de nieuwste trends in webontwikkeling, design en AI. Lees onze inzichtelijke blogs over digitale innovatie en creatieve oplossingen." structuredData={blogStructuredData}>
    <section class="blog">
        <h1>Blog</h1>
        
        <h2>Geen blogs gevonden</h2>
        <!-- <ul>
            <BlogPosts />
        </ul> -->
    </section>
</Layout>

<style>
    .blog {
        padding: 80px 25px 600px;
    }

    h1 {
        font-size: 48px;
        padding-bottom: 80px;
    }

    h2 {
        font-family: "JetBrains", sans-serif;
    }

    ul {
        list-style: none;
        display: grid;
        grid-template-columns: 1;
        gap: 30px;
    }

    @media screen and (min-width: 764px) {
        ul {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media screen and (min-width: 813px) {
        .blog {
            padding: 120px 60px 25px;
        }

        h1 {
            font-size: 72px;
            text-align: center;
        }

        h2 {
            font-size: 36px;
            text-align: center;
        }
    }

    @media screen and (min-width: 1024px) {
        h1 {
            font-size: 128px;
        }

        h2 {
            font-size: 64px;
        }

        ul {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media screen and (min-width: 1224px) {
        ul {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>
