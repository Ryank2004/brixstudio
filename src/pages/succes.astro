---
import Layout from "@layout/Layout.astro";
import ArrowRight from "@atoms/ArrowRight.astro";

const succesStructuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Bericht verzonden | Brix Studio",
  "description": "Bedankt voor je bericht aan Brix Studio. We nemen zo snel mogelijk contact met je op om je digitale project te bespreken.",
  "url": "https://www.brixstudio.nl/succes",
  "isPartOf": {
    "@type": "WebSite",
    "name": "Brix Studio",
    "url": "https://www.brixstudio.nl"
  }
};
---

<Layout title="Bericht verzonden | Brix Studio" description="Bedankt voor je bericht aan Brix Studio. We nemen zo snel mogelijk contact met je op om je digitale project te bespreken. Tot snel!" structuredData={succesStructuredData}>
    <section class="success">
        <div class="content">
            <h1 class="success-title">Verzonden!</h1>
            <p>
                Bedankt voor je bericht. We nemen zo snel mogelijk contact met je op.
            </p>
            
            <div class="actions">
                <a href="/" class="home-button">
                    Terug naar homepage 
                    <ArrowRight />
                </a>
                
                <a href="/projecten" class="projects-button">
                    Bekijk onze projecten
                </a>
            </div>
        </div>
    </section>
</Layout>

<style>
    .success {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 80px 25px 120px;
        text-align: center;
        min-height: 70vh;
    }

    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 800px;
    }

    .success-title {
        font-size: 48px;
        margin: 0;
        line-height: 1;
        margin-bottom: 24px;
        color: var(--dark-color);
    }

    p {
        font-family: "Jetbrains", sans-serif;
        font-size: 18px;
        line-height: 1.6;
        margin-bottom: 40px;
    }

    .actions {
        display: flex;
        flex-direction: column;
        gap: 16px;
        margin-bottom: 48px;
    }

    .home-button {
        display: flex;
        align-items: center;
        gap: 8px;
        background-color: var(--dark-color);
        color: var(--light-color);
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        transition: background-color 0.2s ease;
    }

    .home-button:hover {
        background-color: #3a3a3a;
    }

    .projects-button {
        color: var(--dark-color);
        padding: 12px 24px;
        border: 2px solid var(--dark-color);
        border-radius: 8px;
        font-weight: 600;
        transition: background-color 0.2s ease, color 0.2s ease;
    }

    .projects-button:hover {
        background-color: var(--dark-color);
        color: var(--light-color);
    }

    @media screen and (min-width: 640px) {
        p {
            font-size: 20px;
        }

        .actions {
            flex-direction: row;
        }
    }

    @media screen and (min-width: 813px) {
        .success {
            padding: 120px 60px;
        }

        .success-title {
            font-size: 72px;
        }
    }

    @media screen and (min-width: 1024px) {
        .success-title {
            font-size: 128px;
        }

        p {
            font-size: 22px;
            max-width: 800px;
        }
    }
</style>

<script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
        gsap.registerPlugin(ScrollTrigger);

        // Animate the success title with a bounce effect
        gsap.from(".success-title", {
            scale: 0.8,
            opacity: 0,
            duration: 0.8,
            ease: "back.out(1.7)"
        });

        // Fade in the other elements
        gsap.from("p, .actions", {
            y: 30,
            opacity: 0,
            stagger: 0.2,
            duration: 0.8,
            ease: "power2.out",
            delay: 0.3
        });
    });
</script>