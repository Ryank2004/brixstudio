---
import Layout from "@layout/Layout.astro";
import Hero from "@molecules/Hero.astro";
import ProjectsHome from "@organisms/ProjectsHome.astro";
import Services from "@organisms/Services.astro";
import Faq from "@organisms/Faq.astro";

const homeStructuredData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Brix Studio",
  "url": "https://www.brixstudio.nl",
  "description": "Brix Studio maakt creatieve websites, tools, designs en content die converteren en verkopen. Neem contact op voor een gratis consult.",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://www.brixstudio.nl/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};
---

<Layout title="Brix Studio | Websites, Designs, Tools & Content" description="Brix Studio creÃ«ert websites, designs en AI-oplossingen die voldoen aan de nieuwste standaarden. Wij maken digitale producten die converteren en impact maken. Bekijk ons werk." structuredData={homeStructuredData}>
	<Hero />
	<div class="wrapper">
		<ProjectsHome />
		<Services />
		<Faq />
	</div>
</Layout>

<script is:inline>
	document.addEventListener("DOMContentLoaded", () => {
		gsap.registerPlugin(ScrollTrigger);

		// Give ScrollTrigger access to Lenis scroll position
		ScrollTrigger.scrollerProxy(document.documentElement, {
			scrollTop(value) {
				return arguments.length
					? window.lenis.scrollTo(value)
					: window.lenis.scroll;
			},
			getBoundingClientRect() {
				return {
					top: 0,
					left: 0,
					width: window.innerWidth,
					height: window.innerHeight,
				};
			},
		});

		// Rest of your existing ScrollTrigger animations
		gsap.timeline({
			scrollTrigger: {
				trigger: ".projects",
				start: "60% center",
				end: "110% center",
				scrub: true,
				markers: false,
			},
		})
			.to(".wrapper", {
				backgroundColor: gsap.getProperty("html", "--background-color"),
			})
			.to(
				".project-text h3, .project-text .see-more",
				{
					color: gsap.getProperty("html", "--light-color"),
				},
				"<",
			);

		gsap.timeline({
			scrollTrigger: {
				trigger: ".wrapper",
				start: "bottom-=100 center",
				end: "bottom+=200 center",
				scrub: true,
				markers: false,
			},
		}).to(".wrapper", {
			"--faq-clip": "2vw",
			"--faq-radius": "5rem",
		});

		// Tell ScrollTrigger to update when Lenis scroll happens
		window.lenis.on("scroll", ScrollTrigger.update);
	});
</script>
<style>
	.wrapper {
		width: 100%;
		/* max-width: 1200px; */
		margin: 0 auto;
	}
</style>

<style is:global>
	.wrapper {
		--faq-clip: 0;
		--faq-radius: 0;
		clip-path: inset(var(--faq-clip) round var(--faq-radius));
		margin-top: -1px; /* Fix weird clip path behavior */
	}
</style>
