---
import Navigation from "@organisms/Navigation.astro";
import BackgroundTexture from "@atoms/BackgroundTexture.astro";
import Footer from "@organisms/Footer.astro";
import Cursor from "@atoms/Cursor.astro";

const {
	title = "Brix Studio",
	description = "Brix Studio creëert websites, designs en AI-oplossingen die voldoen aan de nieuwste standaarden. Wij maken digitale producten die converteren en impact maken. Bekijk ons werk.",
	structuredData = {
		"@context": "https://schema.org",
		"@type": "Organization",
		name: "Brix Studio",
		url: "https://www.brixstudio.nl",
		description:
			"Brix Studio creëert websites, designs en AI-oplossingen die voldoen aan de nieuwste standaarden. Wij maken digitale producten die converteren en impact maken.",
	},
} = Astro.props;

// Converteer structuredData naar een string
const structuredDataString = JSON.stringify(
	typeof structuredData === "function" ? structuredData() : structuredData,
);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<title>{title}</title>

		<!-- JSON-LD voor gestructureerde data -->
		<script type="application/ld+json" set:html={structuredDataString} />

		<link rel="stylesheet" href="/css/global.css" />
		<link
			rel="preload"
			href="/fonts/Midnight.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<link
			rel="preload"
			href="/fonts/JetBrainsMono.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			sizes="64x64"
			href="images/BrixStudioIcon.svg"
		/>

		<!-- Preload critical JavaScript -->
		<link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" as="script" />
		<link rel="preload" href="https://cdn.jsdelivr.net/npm/split-type@latest" as="script" />
	</head>
	<body>
		<!-- Preloader -->
		<div id="preloader">
			<div class="loader"></div>
		</div>

		<BackgroundTexture />
		<Cursor />
		<Navigation />
		<slot />
		<Footer />

		<!-- Load scripts -->
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
			></script>
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"
			></script>
		<script src="https://cdn.jsdelivr.net/npm/split-type@latest"></script>
		
		<script>
			import "../scripts/smooth-scroll";
		</script>

		<!-- Preloader script -->
		<script is:inline>
			// Wait for both DOM content and all resources to load
			window.addEventListener('load', function() {
				// Small delay to ensure animations are ready to run
				setTimeout(function() {
					document.body.classList.add('loaded');
				}, 100);
			});
		</script>
	</body>
</html>