---
import Navigation from "@organisms/Navigation.astro";
import BackgroundTexture from "@atoms/BackgroundTexture.astro";
import Footer from "@organisms/Footer.astro";
import Cursor from "@atoms/Cursor.astro";

const {
	title = "Brix Studio",
	description = "Brix Studio creëert websites, designs en AI-oplossingen die voldoen aan de nieuwste standaarden. Wij maken digitale producten die converteren en impact maken. Bekijk ons werk.",
	structuredData = {
		"@context": "https://schema.org",
		"@type": "Organization",
		name: "Brix Studio",
		url: "https://www.brixstudio.nl",
		description:
			"Brix Studio creëert websites, designs en AI-oplossingen die voldoen aan de nieuwste standaarden. Wij maken digitale producten die converteren en impact maken.",
	},
} = Astro.props;

// Converteer structuredData naar een string
const structuredDataString = JSON.stringify(
	typeof structuredData === "function" ? structuredData() : structuredData,
);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<title>{title}</title>
		<script is:inline>
			(async () => {
				try {
					if (!("paintWorklet" in CSS)) {
						await import("https://unpkg.com/css-paint-polyfill");
					}
					await CSS.paintWorklet.addModule(
						"/worklets/squircle.min.js",
					); // zet squircle.min.js in /public/worklets/
					document.documentElement.classList.add("has-squircle");
				} catch (e) {
					console.warn("Houdini failed", e);
				}
			})();
		</script>
		<script type="application/ld+json" set:html={structuredDataString} />

		<link rel="stylesheet" href="/css/global.css" />
		<link
			rel="preload"
			href="/fonts/Midnight.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<link
			rel="preload"
			href="/fonts/JetBrainsMono.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x24"
			href="/images/LogoBrixSmall.png"
		/>
		<link
			rel="mask-icon"
			href="/images/LogoBrixSmall.png"
			color="#000000"
		/>
		<link
			rel="apple-touch-icon"
			sizes="32x32"
			href="/images/LogoBrixSmall.png"
		/>
	</head>

	<body>
		<BackgroundTexture />
		<Cursor />
		<Navigation />
		<slot />
		<Footer />
	</body>

	<script is:inline>
		window.addEventListener("DOMContentLoaded", () => {
			gsap.set("body", { autoAlpha: 1 });
		});
	</script>

	<script
		src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
		defer></script>
	<script
		src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"
		defer></script>

	<script>
		import "../scripts/smooth-scroll";
	</script>
</html>
